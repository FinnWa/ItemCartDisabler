{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget-form.html.twig' %}

{% block page_product_detail_buy_button %}
    {% set product = page.product %}
    {% set  fixdata = fix_data() %}
    {{ dump(fixdata) }}
    {% if  should_show(product.id) == true%}
        {% if should_show_modal() == true %}
            <button type="button" class="btn btn-cart" data-toggle="modal" data-target="#cartModal">
                {{ 'itemCart.config.cartTextTranslation'|trans|sw_sanitize }}
            </button>

            <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="cartModalLabel">{{ 'itemCart.config.modalTitleTranslation'|trans|sw_sanitize }}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{ 'itemCart.config.modalBodyTranslation'|trans|sw_sanitize }}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-modal"
                                    data-dismiss="modal">{{ 'itemCart.config.modalButtonTranslation'|trans|sw_sanitize }}</button>
                        </div>
                    </div>
                </div>
            </div>

        {% else %}
            <button type="button" class="btn btn-cart">
                {{ 'itemCart.config.cartTextTranslation'|trans|sw_sanitize }}
            </button>
        {% endif %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}